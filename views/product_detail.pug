extends layout

block content
  h2.page-title= product.name
  i.product-category= product.category.name
  if product.description
    p.product-description= product.description
  p.product-price $#{product.price}
  if (product.number_in_stock > 0)
    p.stock.in-stock In Stock
  else
    p.stock.out-of-stock Out of Stock
  ul.list
    li.link
      a(href=`${product.url}/update`) Update product
    li.link
      a(href=`${product.url}/delete`) Delete product
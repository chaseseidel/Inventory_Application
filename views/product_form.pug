extends layout

block content
  h2.page-title= title
  form.product-form(action="", method="POST")
    label.form-label(for="name") Name: 
    input.form-input(type="text" id="name" name="name" placeholder="Enter a name" required="true" value=(undefined===product ? '' : product.name))
    label.form-label(for="description") Description (optional):
    input.form-input(type="text" id="description" name="description" placeholder="Enter a description" value=(undefined===product ? '' : product.description))
    label.form-label(for="category") Category:
    select.form-select(type="select", placeholder="Select category" name="category" required="true")
        each category in category_list
            option(value=category._id) #{category.name}
    label.form-label(for="price") Price:
    input.form-input(type="text" id="price" name="price" placeholder="Enter a price" required="true" value=(undefined===product ? '' : product.price))
    label.form-label(for="number_in_stock") Number in stock:
    input.form-input(type="number" id="number_in_stock" name="number_in_stock" placeholder="Enter a number" required="true" value=(undefined===product ? '' : product.number_in_stock))
    button.submit-btn(type="submit") Submit
  if errors
    ul
      for error in errors
        li!= error.msg